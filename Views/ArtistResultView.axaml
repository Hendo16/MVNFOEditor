<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:theme="clr-namespace:SukiUI.Theme;assembly=SukiUI"
             xmlns:vm="using:MVNFOEditor.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MVNFOEditor.Views.ArtistResultView"
             x:DataType="vm:ArtistResultViewModel">
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="theme:ButtonExtensions.ShowProgress" Value="{Binding Loading}" />
        </Style>
    </UserControl.Styles>
    <Grid ColumnDefinitions="Auto,Auto,*" VerticalAlignment="Center">
        <Image Grid.Column="0" Margin="0 10 0 0" Width="120" Stretch="Uniform" Source="{Binding Thumbnail}"/>
        <Border Grid.Column="1">
            <Grid Margin="10 0 0 0" RowDefinitions="Auto,Auto,*" VerticalAlignment="Center">
                <TextBlock Grid.Row="0" Margin="10 10 0 0" Classes="h4" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Name}"/>
                <Button Grid.Row="1" Margin="0 10  0 0" HorizontalAlignment="Right" Classes="Accent" Content="{Binding SelectButtonText}" Click="GrabArtist"/>
            </Grid>
          </Border>
      </Grid>
</UserControl>