<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MVNFOEditor.ViewModels"
             xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             xmlns:theme="clr-namespace:SukiUI.Theme;assembly=SukiUI"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MVNFOEditor.Views.MusicVideoDetailsView"
             x:DataType="vm:MusicVideoDetailsViewModel">
    <UserControl.Resources>
        <suki:PropertyGridTemplateSelector x:Key="PropertyGridTemplateSelector" UseSukiHost="True" />
    </UserControl.Resources>
    
    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" ColumnDefinitions="Auto, Auto" RowDefinitions="Auto, Auto, *">
            <Button Margin="0 0 0 20" Grid.Row="0" Content="Back" Command="{Binding NavigateBack}"/>
            <suki:GlassCard Grid.Column="0" Grid.Row="1" Margin="10 10 0 0" Width="500">
              <suki:GlassCard.Resources>
                <system:Double x:Key="GlassOpacity">0.2</system:Double>
              </suki:GlassCard.Resources>
                <suki:GroupBox Header="Video Details">
                    <StackPanel Classes="HeaderContent">
                        <suki:PropertyGrid Item="{Binding NfoDetails}">
                            <suki:PropertyGrid.DataTemplates>
                                <StaticResource ResourceKey="PropertyGridTemplateSelector" />
                            </suki:PropertyGrid.DataTemplates>
                        </suki:PropertyGrid>
                        <!--
                        <TextBox theme:TextBoxExtensions.Prefix="Title:  "  Text="{Binding Title}" Watermark="Name" />
                        <TextBox theme:TextBoxExtensions.Prefix="Year:  "  Text="{Binding Year}" Watermark="Video Year" />
                      <StackPanel Orientation="Horizontal">
                        <ComboBox Width="400" PlaceholderText="Album" ItemsSource="{Binding Albums}" SelectedItem="{Binding CurrAlbum}">
                          <ComboBox.ItemTemplate>
                            <DataTemplate>
                              <TextBlock Text="{Binding Title}"/>
                            </DataTemplate>
                          </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button HorizontalAlignment="Right" Command="{Binding NewAlbum}" RelativePanel.RightOf="AlbumList" Content="+" Background="Green" />
                      </StackPanel>
                      <Button Margin="0 10 0 10" Classes="Flat" Content="Change Source" Command="{Binding UpdateVideoSource}"/>
                        -->
                      <Button Margin="0 10 0 10" Classes="Flat Accent" Content="Save" Command="{Binding UpdateMusicVideo}"/>
                      <Button Margin="0 10 0 10" Classes="Outlined Danger" Content="Delete" Command="{Binding DeleteVideo}"/>
                    </StackPanel>
                </suki:GroupBox>
            </suki:GlassCard>
            <suki:GlassCard Grid.Column="1" Grid.Row="1" Margin="10 10 0 0" Width="500">
                <suki:GlassCard.Resources>
                    <system:Double x:Key="GlassOpacity">0.2</system:Double>
                </suki:GlassCard.Resources>
              <Grid RowDefinitions="Auto, Auto,*">
                  <Image Grid.Row="0" Margin="10 10 10 10" Width="240" Stretch="Uniform" Source="{Binding Thumbnail}"/>
                  <suki:GroupBox Grid.Row="1" Header="Video Metadata">
                      <StackPanel Classes="HeaderContent">
                          <TextBlock Text="{Binding Duration}"/>
                          <TextBlock Text="{Binding Resolution}"/>
                          <TextBlock Text="{Binding Codec}"/>
                          <TextBlock Text="{Binding Bitrate}"/>
                          <TextBlock Text="{Binding AspectRatio}"/>
                      </StackPanel>
                  </suki:GroupBox>
              </Grid>
            </suki:GlassCard>
        </Grid>
    </ScrollViewer>
</UserControl>