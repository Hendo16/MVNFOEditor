<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:MVNFOEditor.ViewModels"
             x:Class="MVNFOEditor.Views.AddMusicVideoParentView"
             x:DataType="vm:AddMusicVideoParentViewModel">
    <Grid RowDefinitions="Auto,Auto,Auto,*">
        <ToggleSwitch Grid.Row="0" IsChecked="{Binding ToggleValue}" IsCheckedChanged="ModeToggleChange" Margin="150,0" VerticalAlignment="Center" OffContent="Manual" OnContent="Automatic" />
        <ContentControl Grid.Row="1" Content="{Binding CurrentContent}" />
        <Border Grid.Row="2">
            <Grid Margin="0 10 0 10" VerticalAlignment="Center">
                <Button Height="40" Width="100" VerticalAlignment="Center" HorizontalAlignment="Left" Classes="Flat" Content="Exit" Command="{Binding Close}" />
                <Button Height="40" Width="100" VerticalAlignment="Center" HorizontalAlignment="Right" Classes="Flat Accent" Content="Next" Command="{Binding SaveVideo}" IsEnabled="{Binding NextEnabled}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>