<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="150"
             xmlns:vm="clr-namespace:MVNFOEditor.ViewModels"
             x:Class="MVNFOEditor.Views.Card"
             x:DataType="vm:CardViewModel">
    <Design.DataContext>
        <vm:CardViewModel />
    </Design.DataContext>
    <Border BorderBrush="DarkBlue" BorderThickness="2" CornerRadius="5">
        <StackPanel Spacing="4" Margin="4">
            <Image Height="100" Width="100" Source="../Assets/tmbte-100x100.jpg"/>
            <Button Name="ArtistBtn" Height="30" Background="Green" HorizontalContentAlignment="Center" Content="{Binding ArtistName}" HorizontalAlignment="Stretch" />
        </StackPanel>
    </Border>
</UserControl>
