<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MVNFOEditor.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MVNFOEditor.Views.ManualAlbumView"
             x:DataType="vm:ManualAlbumViewModel">
    <Grid Width="400" ColumnDefinitions="Auto,Auto">
        <Grid MaxWidth="150" Grid.Column="0" RowDefinitions="Auto, Auto">
            <TextBox Width="150" Grid.Row="0" Watermark="Title" Text="{Binding AlbumNameText}"/>
            <TextBox Width="150" Grid.Row="1" Watermark="Year" Text="{Binding AlbumYear}"/>
        </Grid>
        <Grid Grid.Column="1" MaxWidth="200" RowDefinitions="Auto, Auto">
            <Image Grid.Row="0" Width="200" Margin="0 0 0 10" Stretch="Uniform" Source="{Binding AlbumCover}"/>
            <Button Grid.Row="1" Content="Browse" Click="CoverSearch"/>
        </Grid>
    </Grid>
</UserControl>