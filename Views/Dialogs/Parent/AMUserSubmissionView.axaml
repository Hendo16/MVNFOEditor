<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             xmlns:vm="using:MVNFOEditor.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MVNFOEditor.Views.AMUserSubmissionView"
             x:DataType="vm:AMUserSubmissionViewModel">
    <suki:GroupBox Header="Apple Music Token">
        <StackPanel Orientation="Vertical" Spacing="10">
            <TextBlock HorizontalAlignment="Center" Classes="h3" Text="Token expired!" />
            <TextBlock HorizontalAlignment="Center" Classes="h4" Text="Please provide a new token" />
            <TextBox MaxWidth="500" Text="{Binding Token}" Watermark="Token" />
            <StackPanel Orientation="Horizontal">
                <Button Width="200"
                        Command="{Binding SubmitTokenCommand}"
                        Content="Submit" />
                <Button Width="200"
                        Name="CloseBtn"
                        Command="{Binding CloseDialogCommand}"
                        Content="Close" />
            </StackPanel>
        </StackPanel>
    </suki:GroupBox>
</UserControl>