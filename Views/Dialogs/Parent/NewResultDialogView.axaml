<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             xmlns:vm="using:MVNFOEditor.ViewModels"
             xmlns:content="clr-namespace:SukiUI.Content;assembly=SukiUI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MVNFOEditor.Views.NewResultDialogView"
             x:DataType="vm:NewResultDialogViewModel">
    <Grid RowDefinitions="Auto, Auto,Auto,*,Auto">
        <!-- Error Panel -->
        <controls:GlassCard Grid.Row="0" IsVisible="{Binding ShowError}">
            <controls:GroupBox Header="Error">
                <TextBlock Text="{Binding ErrorText}" />
            </controls:GroupBox>
        </controls:GlassCard>
        <!-- Stepper -->
        <Grid IsVisible="{Binding ShowStepper}" ColumnDefinitions="*, 60" Grid.Row="1" VerticalAlignment="Center">
            <controls:Stepper Width="400" Grid.Column="0" HorizontalAlignment="Center"
                              IsEnabled="{Binding StepperEnabled}"
                              AlternativeStyle="True" Index="{Binding StepIndex}"
                              Steps="{Binding Steps}" />
            <!-- Makeshit Exit Button -->
            <Button Grid.Column="1" IsVisible="{Binding NavVisible}" Command="{Binding CloseDialog}"
                    VerticalAlignment="Center">
                <PathIcon Data="{x:Static content:Icons.Cross}" />
            </Button>
        </Grid>
        <!-- Source Selector -->
        <StackPanel IsVisible="{Binding ShowStepper}" Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal" Spacing="10">
            <RadioButton Height="40" Classes="Chips" Content="Manual" GroupName="VideoType"
                         Command="{Binding ManualSelected}" />
            <RadioButton Height="40" Classes="Chips" Content="Youtube Music" GroupName="VideoType" IsChecked="True"
                         IsEnabled="{Binding YtEnabled}" Command="{Binding YtSelected}" />
            <RadioButton Height="40" Classes="Chips" Content="Apple Music" GroupName="VideoType"
                         IsEnabled="{Binding AmEnabled}" Command="{Binding AmSelected}" />
        </StackPanel>
        <!-- Results List -->
        <controls:BusyArea Grid.Row="3" BusyText="{Binding BusyText}" IsBusy="{Binding IsBusy}">
            <ContentControl Content="{Binding CurrentContent}" />
        </controls:BusyArea>
        <!-- Navigation Buttons -->
        <Border Grid.Row="4">
            <Grid IsVisible="{Binding NavVisible}" Margin="0 10 0 10" VerticalAlignment="Center">
                <Button Height="40" Width="100" VerticalAlignment="Center" HorizontalAlignment="Left" Classes="Flat"
                        Content="{Binding BackButtonText}" Command="{Binding BackTrigger}" />
                <Button Height="40" Width="100" VerticalAlignment="Center" HorizontalAlignment="Center"
                        Classes="Outlined" Content="Skip" Command="{Binding HandleSkip}" IsVisible="False" />
                <Button Height="40" Width="100" VerticalAlignment="Center" HorizontalAlignment="Right"
                        Classes="Flat Accent" Content="{Binding NextButtonText}" Command="{Binding NextTrigger}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>