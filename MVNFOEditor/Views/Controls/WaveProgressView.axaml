<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MVNFOEditor.ViewModels"
             xmlns:controls="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             mc:Ignorable="d"
             x:Class="MVNFOEditor.Views.WaveProgressView"
             x:DataType="vm:WaveProgressViewModel">
    <controls:GlassCard>
        <controls:GroupBox Header="{Binding HeaderText}">
            <Grid>
                <controls:WaveProgress IsVisible="{Binding WaveVisible}" Value="{Binding ProgressValue}" />
                <controls:CircleProgressBar Width="130"
                                            Height="130"
                                            IsIndeterminate="{Binding IsIndeterminate}"
                                            IsVisible="{Binding CircleVisible}"
                                            StrokeWidth="11"
                                            Value="{Binding ProgressValue}">
                    <TextBlock Margin="0,2,0,0"
                               Classes="h3"
                               Text="{Binding ProgressValue, StringFormat={}{0:#0}%}" />
                </controls:CircleProgressBar>

            </Grid>
        </controls:GroupBox>
    </controls:GlassCard>
</UserControl>