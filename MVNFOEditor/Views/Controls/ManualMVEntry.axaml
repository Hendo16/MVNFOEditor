<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sukiContent="clr-namespace:SukiUI.Content;assembly=SukiUI"
             xmlns:vm="using:MVNFOEditor.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MVNFOEditor.Views.ManualMVEntry"
             x:DataType="vm:ManualMVEntryViewModel"
             Width="240">
    <StackPanel Orientation="Horizontal" Spacing="5" Width="290">
        <StackPanel.ContextMenu>
            <ContextMenu>
                <MenuItem Command="{Binding RemoveListing}" Header="Remove Entry">
                    <MenuItem.Icon>
                        <PathIcon Width="15"
                                  Height="15"
                                  Data="{x:Static sukiContent:Icons.Cross}" />
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </StackPanel.ContextMenu>
        <Border CornerRadius="10" ClipToBounds="True">
            <Panel Height="56" Width="120" Background="#7FFF22DD">
                <Image Width="120" Stretch="Uniform" Source="{Binding Thumbnail}" />
                <Panel Height="56" Width="120"
                       IsVisible="{Binding Thumbnail, Converter={x:Static ObjectConverters.IsNull}}">
                    <PathIcon Height="38" Width="38" Data="{StaticResource music_regular}" />
                </Panel>
            </Panel>
        </Border>
        <StackPanel Spacing="3">
            <TextBlock Classes="h4" HorizontalAlignment="Center" Text="{Binding Title}" />
            <TextBlock Classes="Caption" HorizontalAlignment="Center" Text="{Binding Year}" />
        </StackPanel>
    </StackPanel>
</UserControl>