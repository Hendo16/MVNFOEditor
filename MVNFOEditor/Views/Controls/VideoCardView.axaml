<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sukiContent="clr-namespace:SukiUI.Content;assembly=SukiUI"
             xmlns:vm="using:MVNFOEditor.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MVNFOEditor.Views.VideoCardView"
             x:DataType="vm:VideoCardViewModel"
             Width="240">
    <StackPanel Spacing="5" Width="240">
        <StackPanel.ContextMenu>
            <ContextMenu>
                <MenuItem Command="{Binding EditVideo}" Header="Edit Video">
                    <MenuItem.Icon>
                        <PathIcon Width="15"
                                  Height="15"
                                  Data="{x:Static sukiContent:Icons.CircleOutline}" />
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </StackPanel.ContextMenu>
        <Border CornerRadius="10" ClipToBounds="True">
            <Panel Background="#7FFF22DD">
                <Image Width="240" Stretch="Uniform" Source="{Binding Thumbnail}" />
                <Panel Height="112" Width="240"
                       IsVisible="{Binding Thumbnail, Converter={x:Static ObjectConverters.IsNull}}">
                    <PathIcon Height="75" Width="75" Data="{StaticResource music_regular}" />
                </Panel>
            </Panel>
        </Border>
        <TextBlock Classes="h4" HorizontalAlignment="Center" Text="{Binding Title}" />
        <TextBlock Classes="Caption" HorizontalAlignment="Center" Text="{Binding Year}" />
    </StackPanel>
</UserControl>