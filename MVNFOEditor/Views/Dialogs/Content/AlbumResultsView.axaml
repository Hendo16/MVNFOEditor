<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             xmlns:vm="using:MVNFOEditor.ViewModels"
             xmlns:views="clr-namespace:MVNFOEditor.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MVNFOEditor.Views.AlbumResultsView"
             x:DataType="vm:AlbumResultsViewModel">
    <suki:BusyArea BusyText="{Binding BusyText}" IsBusy="{Binding IsBusy}">
        <Grid RowDefinitions="Auto,Auto,*">
            <TextBox Grid.Row="0" Text="{Binding SearchText}" KeyUp="SearchText_KeyPressUp"
                     Watermark="Search..." Margin="0,0,0,10" />
            <ListBox MaxHeight="250" Grid.Row="1" SelectionMode="Single" SelectedItem="{Binding SelectedAlbum}"
                     ItemsSource="{Binding SearchResults}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <views:AlbumResultView Margin="0 0 10 0" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </suki:BusyArea>
</UserControl>